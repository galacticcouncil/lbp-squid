{
  "name": "kusama-transfers",
  "private": true,
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "build": "rm -rf lib && tsc",
    "db:migrate": "npx squid-typeorm-migration apply",
    "processor:start": "node lib/processor.js",
    "query-node:start": "squid-graphql-server --subscriptions --max-response-size 10000"
  },
  "dependencies": {
    "@subsquid/archive-registry": "2.0.1",
    "@subsquid/graphql-server": "3.3.0",
    "@subsquid/ss58": "0.1.2",
    "@subsquid/substrate-processor": "2.2.0",
    "@subsquid/typeorm-migration": "0.1.4",
    "@subsquid/typeorm-store": "0.2.0",
    "dotenv": "^16.0.3",
    "git-repo-info": "^2.1.1",
    "pg": "8.8.0",
    "typeorm": "0.3.11",
    "yargs": "^17.6.2"
  },
  "devDependencies": {
    "@subsquid/substrate-metadata-explorer": "1.0.9",
    "@subsquid/substrate-typegen": "2.1.0",
    "@subsquid/typeorm-codegen": "0.3.1",
    "@types/node": "18.11.18",
    "@types/yargs": "^17.0.20",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "typescript": "4.9.4"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "none",
    "tabWidth": 2,
    "useTabs": false,
    "semi": false
  },
  "eslintConfig": {
    "extends": [
      "eslint-config-prettier"
    ],
    "overrides": [
      {
        "files": [
          "*"
        ],
        "rules": {
          "quotes": [
            "warn",
            "single",
            {
              "avoidEscape": true,
              "allowTemplateLiterals": true
            }
          ]
        }
      }
    ]
  }
}
